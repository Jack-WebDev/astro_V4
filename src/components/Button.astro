
---
export interface Props {
    title?: string;
}


const { title = "Let's Talk"} = Astro.props as Props;
---


<button>{ title }</button>

<style>
    button {
        border: none;
        background-color: #fff;
        font-size: clamp(1.2rem, 1.5vw + .5rem, 1.5rem);
        font-weight: 600;
        padding: .8em;
        color: var(--clr-accent-3);
        border-radius: 10px;
        transform: scale(1);
        transition: transform 500ms ease-in-out;
    }

    button:hover {
        color: #000;
        transform: scale(1.1);
    }
</style>
