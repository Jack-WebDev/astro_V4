
---
export interface Props {
    title?:string,
    img?:string,
}

const { title = "Design", img = "/assets/PNG/Design-BG.jpg" } = Astro.props as Props;
---


<section aria-label="Showcase" style=`background-image: url(${img});`>
    <h1>{title}</h1>
</section>



<style>
    section {
        display: grid;
        place-items: center;
        background-color: rgb(0 0 0 / .5);
        background-blend-mode: multiply;
        background-size: cover;
        background-repeat: no-repeat;
        padding-block: clamp(20vh,20vw,25vh);
    }


    h1 {
        font-size: clamp(2rem, 4vw + .5rem, 3rem);
        position: relative;
        color: #fff;
    }

    h1::after {
        content: '';
        background-color: var(--clr-primary);
        height: 3px;
        width: 100%;
        position: absolute;
        left: 0;
        bottom: 0;
    }
</style>


