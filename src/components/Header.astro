---


<header aria-label="header" class="header" id="header">
  
  <nav class="navbar" id="navbar" aria-label="navigation">
    <a href="#services" class="skip__nav">Skip to Main Content</a>

    <a aria-label="Logo" aria-hidden="true" href="/" class="logo">
      <span class="j">J</span>ack 
      <span class="w">W</span>ebDev
    </a>

      <div aria-label="navigation-toggle" class="hamburger" id="hamburger" role="button" tabindex="0" aria-controls="navMenu" aria-pressed="false" aria-expanded="false">
        <div class="bar"></div>
        <div class="bar"></div>
        <div class="bar"></div>
      </div>


        <ul class="nav__menu" id="navMenu">
            <li class="nav__item about_item">
            <span aria-hidden="true">1.</span><a href="#services" class="nav__link">Services</a>
            </li>
            <li class="nav__item design_item">
            <span aria-hidden="true">2.</span><a href="/design" class="nav__link" target="_blank">Design</a>
            </li>
            <li class="nav__item website_item">
            <span aria-hidden="true">3.</span><a href="/webDesign" class="nav__link" target="_blank">Web Design</a>
            </li>
            <li class="nav__item marketing_item">
            <span aria-hidden="true">4.</span><a href="/marketing" class="nav__link" target="_blank">Online Marketing</a>
            </li>
        </ul>
  </nav>
</header>


<style>

.header {
  width: min(90%, 1400px);
  margin-inline: auto;
}

.navbar {
  display: flex;
  justify-content: space-around;
  align-items: center;
  position: relative;
}

.skip__nav {
  position: absolute;
  padding: 1rem;
  border-radius: 10px;
  background-color: var(--clr-accent-3);
  font-size: 1rem;
  font-weight: bold;
  color: var(--clr-accent-2);
  text-decoration: none;
  transform: translateY(-20rem);
  transition: transform 400ms ease-in;
}
.skip__nav:focus {
  transform: translateY(0);
}
.skip__nav:focus-within {
  outline: none;
}

.logo {
  display: flex;
  align-items: baseline;
  font-size: 1rem;
  font-weight: var(--fw-600);
  text-decoration: none;
  color: var(--clr-accent-3);
}

.j,.w {
  font-size: 3em;
  font-family: "Vujahday Script", cursive;
  font-weight: var(--fw-600);
}

.j:hover, .w:hover {
  color: var(--clr-accent-2);
}

.hamburger {
  display: inline-block;
  cursor: pointer;
}

.bar {
  width: 30px;
  height: 2px;
  margin-top: 5px;
  background-color: var(--clr-accent-3);
  transition: opacity 700ms linear, transform 200ms ease-in-out;
}

.hamburger .bar:nth-child(2) {
  transform: translateX(7px);
}
.hamburger .bar:nth-child(3) {
  transform: translateX(14px);
}

.nav__menu {
  display: grid;
  place-items: center;
  align-items: center;
  background-color: rgb(255 255 255);
  width: 100%;
  margin-block-start: 1rem;
  padding: 2em;
  gap: 1rem;
  border-radius: 10px;
  transform: translateY(-200%);
  transition: transform 300ms ease-in;
  list-style: none;
  position: absolute;
}

.nav__item {
  display: flex;
  align-items: baseline;
  gap: .3rem;
}

.nav__menu .nav__link {
  font-size: 1.3rem;
  font-weight: var(--fw-600);
  color: var(--clr-accent-3);
  text-decoration: none;
}

.nav__link:hover {
  text-decoration: 2px underline var(--clr-accent-1);
}


.nav__menu.active {
  transform: translateY(61%);
}

.navbar .hamburger.active .bar:nth-child(2) {
  transform: translateX(-15px);
  opacity: 0;
}
.navbar .hamburger.active .bar:nth-child(1) {
  transform: rotate(-45deg) translateY(10px);
}
.navbar .hamburger.active .bar:nth-child(3) {
  transform: rotate(45deg) translateY(-10px);
}




@media screen and (min-width: 768px) {
  
  .hamburger {
    display: none;
  }

  .navbar {
    flex-wrap: nowrap;
  }

  .nav__menu {
    display: flex;
    background-color: unset;
    width: auto;
    margin: 0;
    gap: 1rem;
    transform: translateY(0);

  }


  .nav__item span {
    font-size: 12px;
    font-weight: var(--fw-600);
  }

}

</style>


<script>
  const hamburger = document.querySelector(".hamburger")
  const navMenu = document.getElementById("navMenu")

  hamburger.addEventListener("click", () => {
    hamburger.classList.toggle("active")
    navMenu.classList.toggle("active")
  })
</script>



