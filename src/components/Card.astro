
---
export interface Props {
    title?:string,
    link?:string,
    image?: string,
}

const { title, link, image } = Astro.props as Props;
---

<div class="card" style=`background-image: url(/assets/PNG/${image}-BG.jpg);`>
    <a href=`/${link}`><h3>{title}</h3></a>
</div>


<style>
    .card {
        padding: 2rem;
        background-color: rgb(0 0 0 / .5);
        background-blend-mode: multiply;
        background-size: cover;
        background-repeat: no-repeat;
        border-radius: 10px;
    }

    .card a {
        color: #fff;
        text-decoration: none;
    }
</style>


